<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3E2C2C"
    tools:context=".StartExam">

    <Button
        android:id="@+id/btnStartPrueba"
        android:layout_width="288dp"
        android:layout_height="88dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="56dp"
        android:backgroundTint="@color/btnPrincipal"
        android:onClick="MakeTest"
        android:text="@string/btnStarPrueba"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/btnStartPrueba2"
        android:layout_width="212dp"
        android:layout_height="81dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="@color/design_default_color_error"
        android:onClick="CerrarSesion"
        android:text="@string/btnCloseSesion"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnStartPrueba" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="293dp"
        android:layout_height="312dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="52dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_foreground" />
</androidx.constraintlayout.widget.ConstraintLayout>